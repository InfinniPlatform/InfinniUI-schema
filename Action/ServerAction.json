{
  "id": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Action/ServerAction.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Действие вызова операции на сервере",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Action/ActionBase.json"
    }
  ],
  "properties": {
    "ConfigId": {
      "description": "Идентификатор конфигурации",
      "type": "string"
    },
    "DocumentId": {
      "description": "Идентификатор документа",
      "type": "string"
    },
    "ActionId": {
      "description": "Идентификатор действия",
      "type": "string"
    },
    "Parameters": {
      "description": "Список параметров запроса",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Name": {
            "description": "Наименование параметра запроса",
            "type": "string"
          },
          "Value": {
            "description": "Привязка данных текущего представления на параметр запроса",
            "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/DataBinding/DataBinding.json"
          }
        },
        "required": [
          "Name",
          "Value"
        ]
      }
    }
  },
  "required": [
    "ConfigId",
    "DocumentId",
    "ActionId"
  ]
}