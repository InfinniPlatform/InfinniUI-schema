{
  "id": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Components/DatePicker/DatePicker.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Редактор даты и времени",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Components/TextEditorBase/TextEditorBase.json"
    }
  ],
  "properties": {
    "MinValue": {
      "description": "Минимальное значение",
      "type": "string",
      "format": "date-time"
    },
    "MaxValue": {
      "description": "Максимальное значение",
      "type": "string",
      "format": "date-time"
    },
    "Mode": {
      "description": "Режим работы элемента",
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Components/DatePicker/DatePickerMode.json",
      "default": "Date"
    }
  }
}