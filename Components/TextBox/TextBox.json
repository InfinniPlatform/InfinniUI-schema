{
  "id": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Components/TextBox/TextBox.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Редактор неформатированного текста",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Components/TextEditorBase/TextEditorBase.json"
    }
  ],
  "properties": {
    "Multiline": {
      "description": "Разрешен ли многострочный текст",
      "type": "boolean",
      "default": false
    },
    "LineCount": {
      "description": "Максимально видимое количество строк",
      "type": "integer"
    }
  }
}