{
  "id": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/DataSource/DocumentDataSource/DocumentDataSource.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Источник данных представления для документов InfinniPlatform",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/DataSource/BaseDataSource.json"
    }
  ],
  "properties": {
    "ConfigId": {
      "description": "Идентификатор конфигурации",
      "type": "string"
    },
    "DocumentId": {
      "description": "Идентификатор документа",
      "type": "string"
    },
    "CreateAction": {
      "description": "Действие на создание",
      "type": "string",
      "default": "CreateDocument"
    },
    "ReadAction": {
      "description": "Действие на чтение",
      "type": "string",
      "default": "GetDocument"
    },
    "UpdateAction": {
      "description": "Действие на изменение",
      "type": "string",
      "default": "SetDocument"
    },
    "DeleteAction": {
      "description": "Действие на удаление",
      "type": "string",
      "default": "DeleteDocument"
    }
  },
  "required": [
    "ConfigId",
    "DocumentId"
  ]
}