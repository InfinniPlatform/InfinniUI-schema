{
  "id": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/LayoutPanel/Panel/Panel.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Контейнер в виде прямоугольной области",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Container/Container.json"
    }
  ],
  "properties": {
    "Collapsible": {
      "description": "Разрешено ли сворачивание панели",
      "type": "boolean",
      "default": false
    },
    "Collapsed": {
      "description": "Свернута ли панель",
      "type": "boolean",
      "default": false
    },
    "HeaderTemplate": {
      "description": "Шаблон отображения заголовка панели",
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Script/LinkScript.json"
    },
    "Header": {
      "description": "Заголовок панели",
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/VisualElement/VisualElement.json"
    },
    "OnExpanding": {
      "description": "Обработчик события о том, что панель разворачивается",
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Script/LinkScript.json"
    },
    "OnExpanded": {
      "description": "Обработчик события о том, что панель была развернута",
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Script/LinkScript.json"
    },
    "OnCollapsing": {
      "description": "Обработчик события о том, что панель сворачивается",
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Script/LinkScript.json"
    },
    "OnCollapsed": {
      "description": "Обработчик события о том, что панель была свернута",
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/Script/LinkScript.json"
    }
  }
}