{
  "id": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/View/LinkViewItem.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Именованный элемент, хранящий ссылку на представление",
  "type": "object",
  "properties": {
    "Name": {
      "description": "Наименование ссылки на представление",
      "type": "string"
    },
    "LinkView": {
      "description": "Значение ссылки на представление",
      "$ref": "https://raw.githubusercontent.com/InfinniPlatform/InfinniUI-schema/master/LinkView/LinkView.json"
    },
    "Resolve": {
      "description": "Разрешать ссылку",
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "Name",
    "LinkView"
  ]
}